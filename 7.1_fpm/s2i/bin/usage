#!/bin/sh

DISTRO=`cat /etc/*-release | grep ^ID= | grep -Po '".*?"' | tr -d '"'`
NAMESPACE=centos
[[ $DISTRO =~ rhel* ]] && NAMESPACE=rhscl

cat <<EOF
This is a S2I PHP-${PHP_VERSION}-fpm ${DISTRO} base image:
To use it, install S2I: https://github.com/openshift/source-to-image

Sample invocation:

s2i build https://github.com/sclorg/s2i-php-container.git --context-dir=/${PHP_VERSION}_fpm/test/test-app/ ${NAMESPACE}/php-${PHP_VER_SHORT}-fpm-${DISTRO}7 php-test-app

You can then run the resulting image via:
docker run -p 8080:8080 php-test-app
EOF
